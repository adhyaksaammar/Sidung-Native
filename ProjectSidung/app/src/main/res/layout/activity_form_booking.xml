<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FormBooking">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Form Booking"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="#000" />

        <EditText
            android:id="@+id/inputNama"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:hint="Nama Lengkap"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/inputNIM"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:hint="NIM"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/inputFakultas"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:hint="Fakultas"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/inputOrganisasi"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:hint="Organisasi"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/inputGedung"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:hint="Gedung"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/inputTanggal"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:hint="Tanggal Pinjam"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/inputWaktu"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:hint="Waktu Penggunaan"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="80dp"
            android:text="Jenis Acara :"
            android:textColor="#000"
            android:textSize="20dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="80dp"
            android:orientation="vertical">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Internal"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eksternal"/>

        </RadioGroup>
        <EditText
            android:id="@+id/inputDeskripsi"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:hint="Deskripsi Acara"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/inputSurat"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:hint="Upload Surat"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/inputKTM"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:hint="Upload KTM"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnTambahBooking"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="SUBMIT"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/btnBackBooking"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="BACK"/>

    </LinearLayout>

</ScrollView>